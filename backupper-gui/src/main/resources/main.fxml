<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<BorderPane id="root" fx:id="root" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="pl.gda.pg.eti.autyzm.MainController">
    <center>
        <TabPane>
            <tabs>
                <Tab text="Download" closable="false">
                    <content>

                        <GridPane hgap="5" vgap="5">
                            <Label text="Nazwa kopi" GridPane.columnIndex="1" GridPane.rowIndex="1"/> <TextField fx:id="nameInput"
                                       GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                            <Label fx:id="directoryDownloadInputLabel" text="Brak wybranego urządzenia"
                                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            <Button fx:id="chooseDeviceButton" GridPane.columnIndex="2" GridPane.rowIndex="2"
                                    text="Wybierz urządzenie" onAction="#chooseDeviceToDownload"/>
                            <Button fx:id="downloadButton" GridPane.columnIndex="1"
                                    GridPane.rowIndex="4" text="Pobierz" onAction="#download"/>
                        </GridPane>
                    </content>
                </Tab>
                <Tab text="Refresh" closable="false">
                    <content>
                        <GridPane hgap="2" vgap="2">
                            <Button fx:id="chooseDeviceToRefreshButton" GridPane.columnIndex="1" GridPane.rowIndex="2"
                                    text="Wybierz urządzenie" onAction="#chooseDeviceToRefresh"/>

                            <Label fx:id="directoryRefreshInputLabel" text="Brak wybranego urządzenia"
                                   GridPane.columnIndex="2" GridPane.rowIndex="2"/>

                            <TableView fx:id="tableView" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                <columns>
                                    <TableColumn text="Nazwa">
                                    </TableColumn>
                                    <TableColumn text="Data utworzenia">
                                    </TableColumn>
                                </columns>
                            </TableView>

                            <Button fx:id="refreshButton" GridPane.columnIndex="1" GridPane.rowIndex="4"
                                    text="Wyślij bazę" onAction="#refresh"/>

                        </GridPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
